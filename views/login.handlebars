<div class="row mt-5">
  <div class="col-md-7 m-auto card card-body">
    <h2 class="text-center">Login</h2>
    {{> message}}
    <form action="/user/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control" placeholder="email" value="{{email}}">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" class="form-control" placeholder="password"
          value="{{password}}">
      </div>
      <button type="submit" class="btn btn-info btn-block mt-4">submit</button>
      <a href="/auth/facebook" class="btn btn-primary btn-block mt-2">使用facebook登入</a>
      <p class="lead mt-4">No Account? <a href="/user/register">register</a></p>
    </form>
  </div>
</div>