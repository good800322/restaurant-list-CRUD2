<header>

  <div class="banner"></div>
</header>
<div class="container">
  <div class="row justify-content-between col-md-10 col-12 mx-auto">
    <div class="search-bar-outer col-5">
      <div class="search-bar-inner">
        <form action="/restaurants/search" method="POST">
          <h5 class="mb-2">尋找餐廳：</h5>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="dropdown col-2 mt-4 mr-3">
      <button class="btn btn-secondary dropdown-toggle mt-1" type="button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        sort
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/restaurants/sort/name">name</a>
        <a class="dropdown-item" href="/restaurants/sort/category">category</a>
        <a class="dropdown-item" href="/restaurants/sort/rating">rating</a>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="card-columns row">
        {{#each restaurant}}
        <a href="/restaurants/{{{this._id}}}" class="text-secondary">
          <div class="card mb-3 col-4">
            <img class="card-img-top" src="{{{this.image}}}" alt="{{{this.name}}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{{this.name}}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{{this.category}}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{{this.rating}}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end px-1">
              <a href="/restaurants/{{{this._id}}}/edit" type="button"
                class="btn btn-outline-info btn-sm font-weight-lighter mx-2">edit</a>
              <form action="/restaurants/{{{this._id}}}/delete?_method=DELETE" method="POST" style="display: inline"
                onsubmit="return confirm('確定要刪除這份資料？');">
                <button type="submit" type="button"
                  class="btn btn-outline-danger btn-sm font-weight-lighter">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>